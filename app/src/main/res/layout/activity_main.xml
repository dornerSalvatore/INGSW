<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    android:padding="0dp"
    android:src="@drawable/forme"
    tools:menu="@menu/menu">





    <Button
        android:id="@+id/bottone1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="299dp"
        android:background="#F47E74"
        android:shadowColor="#FB7575"
        android:text="Accedi"
        android:textAllCaps="false"
        android:visibility="visible" />

    <Button
        android:id="@+id/bottone2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottone1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:background="#F48178"
        android:text="Registrati"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bottone3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="143dp"
        android:layout_height="58dp"
        android:layout_below="@id/bottone2"
        android:layout_centerInParent="true"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="228dp"
        android:background="#3567EF"
        android:text="Ricerca Strutture"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="173dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="213dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="129dp"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-26dp"
        android:layout_marginLeft="-26dp"
        android:layout_marginBottom="-16dp"
        android:alpha="0.7"
        android:src="@drawable/forme" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginBottom="-32dp"
        android:alpha="0.9"
        android:src="@drawable/forme" />

    <TextView
        android:id="@+id/CV19"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="CV'19"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" /><![CDATA[

    />


]]>
</RelativeLayout>