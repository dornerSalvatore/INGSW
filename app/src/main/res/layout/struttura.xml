<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    android:padding="0dp"
    android:src="@drawable/forme"
    tools:menu="@menu/menu">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:menu="@menu/menu" />


    <TextView
        android:id="@+id/inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="80dp"
        android:text="nome"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#EF0606"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/indirizzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="280dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:text="indirizzo"
        android:textColor="#151515"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        android:text="Indirizzo"
        android:textColor="#171616"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="321dp"
        android:fillViewport="true" >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <include
                android:id="@+id/toolbar1"
                layout="@layout/toolbar1"
                app:menu="@menu/menu_filtri" />

            <ListView

                android:id="@+id/lista"
                android:layout_width="match_parent"
                android:layout_height="288dp"
                android:layout_marginTop="70dp"
                />




        </RelativeLayout>


    </ScrollView>

    <Button
        android:id="@+id/buttonAggiungi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="622dp"
        android:layout_centerHorizontal="true"
        android:text="Aggiungi Recensione"
        android:textColor="#F10A0A" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="130dp"
        app:srcCompat="@android:drawable/dark_header" />


</RelativeLayout>